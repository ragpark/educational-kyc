# ===== Runtime =====
NODE_ENV=development
PORT=3001
TOOL_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
COOKIE_SECRET=change_me_cookie
SESSION_SECRET=change_me_session


# ===== LTI 1.3 (ltijs) =====
LTI_ENCRYPTION_KEY=change_me_strong
# Backing store for ltijs (e.g., sqlite/postgres/mysql). Examples:
# LTI_DATABASE_URL=sqlite://./lti.db
# LTI_DATABASE_URL=postgres://user:pass@localhost:5432/lti
LTI_DATABASE_URL=sqlite://./lti.db


# ---- From the LMS (Platform) ----
LTI_PLATFORM_URL=https://your-lms.example.com
LTI_CLIENT_ID=1234567890 # (LMS)
LTI_AUTH_LOGIN_URL=https://your-lms.example.com/oidc/login # (LMS)
LTI_AUTH_TOKEN_URL=https://your-lms.example.com/login/oauth2/token # (LMS)
LTI_KEYSET_URL=https://your-lms.example.com/api/lti/security/jwks # (LMS)
LTI_DEPLOYMENT_ID=abcdef-123456 # (LMS)


# ===== Optional: AGS/NRPS scopes toggle (some libs read these) =====
LTI_ENABLE_AGS=true
LTI_ENABLE_NRPS=true


# ===== Azure (used in cloud deploys) =====
AZURE_SQL_CONNECTION_STRING=Server=tcp:your-sql.database.windows.net,1433;Database=appdb;User ID=appuser;Password=***;Encrypt=true;
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=***


# ===== Logging =====
LOG_LEVEL=info
